<main>

    <% if flash[:notice] %>
    <div class="flash">
    <%= flash[:notice] %>
    </div>
    <% end %>


    <div class='container px-5 px-sm-0'>
      <div class='row'>
        <div class='col-md-3'>

        <%= render 'books/list', user: @user, book: @newbook %>

        </div>

        <div class='col-md-8 offset-md-1'>
          <h2>Book detail</h2>
          <table class='table table-hover table-inverse'>

               <tr>
                <td><%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
                <td><%= link_to @book.title, book_path(@book.id) %></td>
                <td><%= @book.body %></td>
                
                <% if @book.user == current_user %>
                  <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
                  <td><%= link_to "Destroy", book_path(@book.id), method: :delete %></td>
                <% else %>
                
                <% end %>
                </tr>
                <tr>
                  <td><%= link_to @book.user.name,user_path(@user.id) %></td>
                </tr>

          </table>
        </div>

      </div>
    </div>
  </main>

