 <main>

 　<% if @book.errors.any? %>
    <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
      <% @book.errors.full_messages.each do |message| %>
      <p>・<%= message %></p>
      <% end %>
   <% end %>

   <p id="notice"></p>
     <div class='container px-5 px-sm-0'>
      <div class='row'>
        <div class='col-md-3'>

           <%= render 'books/list', post_images: @post_images %>



        </div>

        <div class='col-md-8 offset-md-1'>
          <h2>Books</h2>
          <table class='table table-hover table-inverse'>

            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>


           　<% @books.each do |book| %>
              <tr>
                <!--< attachment_image_tag 保存先インスタンス名, :保存先カラム名, :サイズ（横幅,高さ）, 画像拡張子, 代替画像 -->
                <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>

                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
              <% end %>

            </table>
           </div>

        </div>
      </div>
  </main>

